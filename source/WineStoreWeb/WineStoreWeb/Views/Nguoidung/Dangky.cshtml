
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="banner-top">
    <div class="container">
        <h2 style="color:deepskyblue"class="animated wow fadeInLeft" data-wow-delay=".5s">Đăng ký thành viên</h2>
        <h3 style="color:deepskyblue;margin-top:-50px"class="animated wow fadeInRight" data-wow-delay=".5s"><a href="@Url.Action("Index","WineStore")">Trang chủ</a><label>/</label>Đăng ký</h3>
        <div class="clearfix"> </div>
    </div>
</div>

<table align="center" style="margin-left:500px">
    <h2 style="text-align:center">Đăng ký thành viên</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên khách hàng</td>
            <td>@Html.TextBox("HotenKH")
            @ViewData["loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập</td>
            <td>
                @Html.TextBox("TenDN")
            @ViewData["loi2"]
        </td>
    </tr>
    <tr style="height:40px">
        <td>Mật khẩu</td>
        <td>
            @Html.TextBox("Matkhau")
        @ViewData["loi3"]
    </td>
    </tr>
    <tr style="height:40px">
        <td>Mật khẩu nhập lại</td>
        <td>
            @Html.TextBox("Matkhaunhaplai")
            @ViewData["loi4"]
        </td>
    </tr>
    <tr style="height:40px">
        <td>Email</td>
        <td>
            @Html.TextBox("Email")
            @ViewData["loi5"]
        </td>
    </tr>
    <tr style="height:40px">
        <td>Địa chỉ</td>
        <td>
            @Html.TextBox("Diachi")
            @ViewData["loi6"]
        </td>
    </tr>
    <tr style="height:40px">
        <td>Điện thoại</td>
        <td>
            @Html.TextBox("Dienthoai")
            @ViewData["loi7"]
        </td>
    </tr>
    <tr style="height:40px">
        <td>Ngày sinh</td>
        <td>
            <input type="date" name="Ngaysinh"/>
            @ViewData["loi8"]
        </td>
    </tr>
    <tr style="height:40px">
        <td></td>
        <td>
            <input type="submit" value="Đăng ký"/>
        </td>
    </tr>
    }
</table>

