
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="banner-top">
    <div class="container">

        <h2 style="color:deepskyblue" class="animated wow fadeInLeft" data-wow-delay=".5s">Đăng nhập</h2>
        <h3  style="color:deepskyblue;margin-top:-50px" class="animated wow fadeInRight" data-wow-delay=".5s"><a href="@Url.Action("Index","WineStore")" style="color:red">Trang chủ</a><label>/</label>Đăng nhập</h3>
        <div class="clearfix"> </div>
    </div>
</div>

<table align="center"style="margin-left:500px">
    <h2 style="text-align:center">Đăng Nhập</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Tên đăng nhập</td>
            <td>
                @Html.TextBox("TenDN")
            @ViewData["loi1"]
        </td>
    </tr>
        <tr style="height:40px">
            <td>Mật khẩu</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" />
            </td>
        </tr>
    }
</table>

