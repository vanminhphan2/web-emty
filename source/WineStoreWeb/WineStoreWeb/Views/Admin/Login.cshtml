
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Đăng nhập với quyền quản trị</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <script src="~/Content/assets/js/index.js"></script>
</head>
<body>
    <div class="login-page">
       
        <div class="form">
            <table align="center">
                <h2 style="text-align:center">Đăng nhập với quyền quản trị</h2>
                <h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <tr style="height:40px">
                        <td>Tên đăng nhập</td>
                        <td>
                            @Html.TextBox("TenDN")
                            @ViewData["loi1"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td>Mật khẩu</td>
                        <td>
                            @Html.Password("Matkhau")
                            @ViewData["loi2"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td></td>
                        <td>
                            <input type="submit" value="Đăng nhập" />
                        </td>
                    </tr>
                }
            </table>
            </form>
       
        </div>
    </div>

</body>
</html>

