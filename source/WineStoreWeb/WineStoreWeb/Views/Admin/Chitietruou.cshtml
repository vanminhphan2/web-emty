@model WineStoreWeb.Models.RUOU

@{
    ViewBag.Title = "Chitietruou";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Thông tin chi tiết rượu</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Tên rượu: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenRuou)
        </dd>

        <dt>
           Giá bán: 
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.Giaban) VNĐ
        </dd>

        <dt>
            Mô tả: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mota)
        </dd>

        <dt>
            Ảnh rượu: 
        </dt>

        <dd>
            <img src="@Url.Content("~/images/"+Model.AnhRuou)"width="120px"/>
        </dd>

        <dt>
            Ngày cập nhật: 
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.Ngaycapnhat)
        </dd>

        <dt>
            Số lượng tồn: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongton)
        </dd>

        <dt>
            Loại rượu: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LOAIRUOU.TenLoaiRuou)
        </dd>

        <dt>
            Nước nhập khẩu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NUOCNHAPKHAU.TenNNK)
        </dd>

        <dt>
            Nhà sản xuất: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHASANXUAT.TenNSX)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Điều chỉnh", "Suaruou", new { id = Model.MaRuou }) |
    @Html.ActionLink("Trở về", "Ruou")
</p>
